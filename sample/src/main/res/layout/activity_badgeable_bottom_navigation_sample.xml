<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BadgeableBottomNavigationSampleActivity"
        android:paddingTop="8dp">

    <com.erkutaras.badgeablebottomnavigation.BadgeableBottomNavigation
            android:id="@+id/bottomNavigationWithDot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_navigation_main"
            app:badgeType="dot"
            android:layout_marginBottom="8dp"/>

    <com.erkutaras.badgeablebottomnavigation.BadgeableBottomNavigation
            android:id="@+id/bottomNavigationWithCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_navigation_main"
            app:badgeType="circle"
            android:layout_marginBottom="8dp"/>

    <com.erkutaras.badgeablebottomnavigation.BadgeableBottomNavigation
            android:id="@+id/bottomNavigationWithNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_navigation_main"
            app:badgeType="number"
            android:layout_marginBottom="8dp"/>


</LinearLayout>